{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://peiffer-innovations.github.io/flutter_json_schemas/schemas/json_theme/button_text_theme.json",
  "type": "string",
  "title": "ButtonTextTheme",
  "oneOf": [
    {
      "type": "string",
      "enum": [
        "accent",
        "normal",
        "primary"
      ]
    },
    {
      "type": "string",
      "pattern": "^\\{\\{.*\\}\\}$"
    },
    {
      "type": "string",
      "pattern": "##.*##$"
    }
  ]
}