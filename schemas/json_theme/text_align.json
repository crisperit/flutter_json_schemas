{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://peiffer-innovations.github.io/flutter_json_schemas/schemas/json_theme/text_align.json",
  "title": "TextAlign",
  "type": "string",
  "oneOf": [
    {
      "type": "string",
      "enum": [
        "center",
        "end",
        "justify",
        "left",
        "right",
        "start"
      ]
    },
    {
      "type": "string",
      "pattern": "^\\{\\{.*\\}\\}$"
    },
    {
      "type": "string",
      "pattern": "##.*##$"
    }
  ]
}